<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

    
</head>
<body>
    <!-- <h1 class="text-white">working

    </h1> -->
    <div class="main  w-full min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" placeholder="title" name="head" class="block rounded-md w-[14vw]  outline-none px-5 py-2 bg-zinc-700">
                <textarea placeholder="hey there...." name="details" class="block mt-2 w-[17vw] h-[20vh] rounded-md outline-none resize-none px-1 py-1 bg-zinc-500">
                </textarea>
                <input type="submit" class="mt-2 p-2 bg-green-600 rounded-md">
            </form>



        </div>

        <div class="tasks p-10 flex flex-wrap gap-3"> 
            <% if(files.length>0){  %>
                <%    files.forEach((val)=>{  %>
                   
                      <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">  
                          <h1 class="text-white text-3xl tracking-tighter"><%= val %> </h1>  
                          <a href="/files/<%= val%>" class="text-blue-500 inline-block mt-3 ">read_more</a>  
                        </div>  

                        <%    })  %>
                <%}else  {%>
           
                <h3 class="text-zinc-600">no tasks..</h3>  
            <%  } %>
            
            
        </div>
    </div>
    
</body>
</html>